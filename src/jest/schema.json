{
  "title": "Jest Runner Target",
  "description": "Jest Runner target options for Build Facade.",
  "type": "object",
  "properties": {
    "watch": {
      "type": "boolean",
      "description": "Run tests for changed files in watch mode.",
      "default": true
    },
    "watchAll": {
      "type": "boolean",
      "description": "Run all tests in watch mode.",
      "default": false
    },
    "colors": {
      "type": "boolean",
      "description": "Display output with colors.",
      "default": true
    },
    "jestPath": {
      "type": "string",
      "description": "Path to jest.",
      "default": "/node_modules/.bin/jest"
    },
    "jestConfig": {
      "type": "string",
      "description": "Path to jest configuration file."
    },
    "updateSnapshots": {
      "type": "boolean",
      "description": "Update snapshots during test run.",
      "default": false
    }
  },
  "additionalProperties": false,
  "required": []
}
